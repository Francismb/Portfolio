<table class="posts">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <th><a href="<%= url_for :controller => :blog, :action => :show, :id => post.id %>"><%= post.title %></a></th>
        <th><%= post.created_at %></th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    <% end %>
  </tbody>
</table>
