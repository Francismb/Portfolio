/* Edit/Delete/New button styles */
a.new-project, a.edit-project, a.delete-project {
  position: absolute;
  right: 0;
  top: 3px;
}
a.edit-project {
  right: 144px;
}

/* Github link */
h1.title span {
    display: inline-block;
    vertical-align: middle;
}
h1.title a.github-link {
    display: inline-block;
    vertical-align: middle;
    width: 24px;
    height: 24px;
    font-size: 0;
    text-indent: -9999px;
    background: url(<%= image_url('github.png') %>) center no-repeat;
}

/* Project view styles */
.projects > .project {
  overflow: hidden;
  height: 300px;
  margin-bottom: 20px;
  border-radius: 3px;
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
}
.projects > .project > .image {
  float: left;
  width: 66.6%;
  height: 300px;
  overflow: hidden;
}
.projects > .project > .summary {
  position: relative;
  float: left;
  width: 33.3%;
  padding: 20px;
  text-align: center;
  box-sizing: border-box;
}
.projects > .project > .summary > .position {
  display: table-cell;
  vertical-align: middle;
  height: 260px;
  text-align: center;
}
.projects > .project > .image > img {
  display: block;
  min-width: 100%;
  min-height: 100%;
  max-width: none;
  max-height: none;
  width: 100%;
  height: auto;
  margin: 0 auto;
}

