/* Edit/Delete/New button styles */
a.new-project, a.edit-project, a.delete-project {
  position: absolute;
  right: 0;
  top: 3px;
}
a.edit-project {
  right: 144px;
}
.projects > .project {
  overflow: hidden;
  height: 300px;
  margin-bottom: 20px;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  -webkit-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
  -moz-box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.3);
}
.projects > .project > .image {
  float: left;
  width: 66.6%;
  overflow: hidden;
}
.projects > .project > .summary {
  position: relative;
  float: left;
  width: 33.3%;
  padding: 20px;
  text-align: center;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}
.projects > .project > .summary > .position {
  display: table-cell;
  vertical-align: middle;
  height: 260px;
}
.projects > .project > .image > img {
  display: block;
  min-width: 100%;
  min-height: 100%;
  max-width: none;
  max-height: none;
  width: 100%;
  height: 100%;
  margin: 0 auto;
}