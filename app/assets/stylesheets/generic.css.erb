/*
 *= require fonts
 *= require reset
 */
/** General styles **/
body {
  color: #333333;
  padding-top: 5px;
  background:  url(<%= image_url('border.jpg') %>) repeat-x top left;
  font-family: 'Open Sans', arial, sans-serif;
}
h1, h2, h3 {
  font-weight: lighter;
  color: #333333;
}
a {
  color: #333333;
  text-decoration: none;
}

.container {
  width: 1000px;
  margin: 0 auto;
}
.content {
  margin-top: 50px;
  font-weight: 300;
}

.center {
  display: block;
  margin: 0 auto;
  text-align: center;
}

.dark {
  color: #333333;
}
.blue {
  color: #3a83e5;
}

.spacer-sm {
  height: 25px;
}
.spacer-md {
  height: 50px;
}
.spacer-lg {
  height: 75px;
}

/** Header styles **/
header {
  height: 50px;
}
header a.me {
  display: block;
  float: left;
  margin-top: 10px;
  font-size: 1.3em;
  line-height: 0.9em;
  transition: color 0.2s;
}
header a.me > span {
  display: block;
  font-size: 12px;
}
header ul.menu {
  float: right;
  list-style: none;
}
header ul.menu > li {
  display: inline-block;
  line-height: 50px;
}
header ul.menu > li > a {
  display: block;
  line-height: 50px;
  padding: 0 10px;
  transition: color 0.2s;
}
header ul.menu > li:nth-of-type(1) > a:hover, header ul.menu > li:nth-of-type(1) > a:focus, header ul.menu > li:nth-of-type(1) > a.current {
  color: #ff9800;
}
header ul.menu > li:nth-of-type(2) > a:hover, header ul.menu > li:nth-of-type(2) > a:focus, header ul.menu > li:nth-of-type(2) > a.current {
  color: #f44336;
}
header ul.menu > li:nth-of-type(3) > a:hover, header ul.menu > li:nth-of-type(3) > a:focus, header ul.menu > li:nth-of-type(3) > a.current {
  color: #009688;
}
header ul.menu > li:nth-of-type(4) > a:hover, header ul.menu > li:nth-of-type(4) > a:focus, header ul.menu > li:nth-of-type(4) > a.current {
  color: #2196f3;
}
header ul.menu > li:nth-of-type(5) > a:hover, header ul.menu > li:nth-of-type(5) > a:focus, header ul.menu > li:nth-of-type(5) > a.current {
  color: #ff9800;
}
