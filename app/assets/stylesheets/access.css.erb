.login-form {
  margin-top: 20px;
}
.login-form input, .login-form label {
  display: block;
  width: 300px;
  margin: 0 auto;
}
.login-form input {
  margin-bottom: 15px;
}
.login-form input[type="text"], .login-form input[type="password"] {
  background: #ffffff;
  border-radius: 3px;
  border: 1px solid #cfcfcf;
  outline: none;
  padding: 4px;
}
.login-form .error {
  color: red;
  margin-bottom: 5px;

  text-align: center;
}
