h1.huge {
	font-size: 4.5em;
	font-weight: 300;
}

h1.huge > span {
	display: block;
	font-size: 16px;
	margin-top: -10px;
}

p.padded {
	padding: 0 100px;
}

.young-background {
	margin: 25px 0;
	background: url(<%= image_url('background.jpg') %>) center top no-repeat;
	-webkit-background-size: cover;
	background-size: cover;
	height: 280px;
}

.young-background p {
	display: table-cell;
	vertical-align: middle;
	height: 280px;
	color: #ffffff;
	line-height: 24px;
}

.specialties {
	text-align: center;
}

.specialties .quarter {
	padding: 0 15px;
}

.specialties h3 {
	margin: 5px auto;
	font-weight: 500;
}

.specialties p {
	color: #949494;
}

.specialties .circle {
	display: inline-block;
	padding: 20px;
	width: 32px;
	height: 32px;
	background: #333333;
	-webkit-border-radius: 150px;
	-moz-border-radius: 150px;
	border-radius: 150px;
}

@media screen and (max-width: 500px) {
	h1.huge {
		font-size: 15vw;
	}

	.young-background p {
		padding: 0 20px;
	}
}

@media screen and (max-width: 880px) {
	.specialties .quarter
	{
		float: none;
		width: auto;
	}
}