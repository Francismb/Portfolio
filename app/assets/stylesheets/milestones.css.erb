/* Edit/Delete/New button styles */
a.new-project, a.edit-project, a.delete-project {
  position: absolute;
  right: 0;
  top: 3px;
}
a.edit-project {
  right: 144px;
}
select#milestone_date_3i + label {
  margin-top: 10px;
}

.milestones {
  padding-left: 80px;
}
.milestones .milestone {
  position: relative;
  margin-top: 20px;
}
.milestones .milestone .sidebar {
  position: absolute;
  left: -2px;
  top: 0;
  height: 100%;
  width: 2px;
  background: #cccccc;
}
.milestones .milestone .sidebar .date {
  display: block;
  position: absolute;
  left: -76px;
  width: 76px;
}
.milestones .milestone .sidebar .date h2 {
  text-align: center;
}
.milestones .milestone .sidebar .date h3 {
  text-align: center;
}
.milestones .milestone .summary {
  padding-left: 20px;
}