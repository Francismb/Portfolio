a.delete-message {
  position: absolute;
  top: 3px;
  right: 0;
}
.messages > div {
  height: 38px;
  padding: 7px 0;
  border-bottom: 1px solid #cccccc;
}
.messages > div:first-child {
  border-top: 1px solid #cccccc;
}
.messages .quarter {
  line-height: 38px;
}
.messages .half {
  text-align: right;
}

form input[type=text], form textarea {
  display: block;
  width: 100%;
  height: 35px;
  padding: 5px;
  line-height: 35px;
  outline: none;
  border: 1px solid #d1d1d1;
  -webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  border-radius: 3px;
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

form textarea {
  padding: 0 5px;
  height: 104px;
}

form input[type=text]:focus, form textarea:focus {
  border-color: #acacac;
}

form input[type=submit] {
  margin-top: 10px;
}

form .half:nth-child(2n-1) {
  padding-right: 15px;
}

form .half:nth-child(2n) {
  padding-left: 15px;
}

form .errors, h2 {
  padding: 10px;
  background: #ECEFF1;
}
form .errors p {
  margin: 0;
}
form button {
  margin-top: 10px;
}
form button.submit img {
  display: none;
}
form button.submit span {
  display: block;
}
form button.submit-loading span {
  display: none;
}
form button.submit-loading img {
  display: block;
  margin: 0 auto;
  -webkit-animation:spin 1s linear infinite;
  -moz-animation:spin 1s linear infinite;
  animation:spin 1s linear infinite;
}

@-moz-keyframes spin {
  100% {
    -moz-transform: rotate(360deg);
  }
}
@-webkit-keyframes spin {
  100% {
    -webkit-transform: rotate(360deg);
  }
}
@keyframes spin {
  100% {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}