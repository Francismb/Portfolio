/* A simple grid layout implementation */
.grid:before, .grid:after {
  display: block;
  content: " ";
  clear: both;
}
.grid > .half, .grid > .third, .grid > .quarter {
    float: left;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.grid > .half {
  width: 50%;
}
.grid > .third {
  width: 33.3%;
}
.grid > .quarter {
  width: 25%;
}
